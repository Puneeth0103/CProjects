#include<stdio.h>

main()
{
	int a[3][3];
	int i,j;
	printf("Enter the elements for a 3x3 matrix:\n");
	for(i=0;i<3;i++)
	{
		for(j=0;j<3;j++)
		{
			printf("element [%d][%d]: ",i,j);
			scanf("%d",&a[i][j]);
		}
	}
	printf("\nThe matrix is:\n");
	for(i=0;i<3;i++)
	{
		for(j=0;j<3;j++)
		{
			printf("%d ",a[i][j]);
		}
		printf("\n");
	}
	return 0;
}
